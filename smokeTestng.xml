<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite" parallel="tests" thread-count="3">
    <listeners>
        <listener class-name="utils.Listener" />
    </listeners>
    <test verbose="2" preserve-order="true" name="Login Test">
        <parameter name="browser" value="${browser}"/>
        <classes>
            <class name="testcases.LoginTest"/>
<!--            <class name="testcases.ApplyLeaveTest"/>-->
        </classes>
    </test>
    <test name="Apply Leave Test">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="testcases.ApplyLeaveTest"/>
        </classes>
    </test>
</suite>